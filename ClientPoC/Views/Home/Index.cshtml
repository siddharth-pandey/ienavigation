@model ClientPoC.ViewModels.DefaultControlsViewModel

@{
    //if (Request.IsAjaxRequest())
    //{
    Layout = null;
    var number = new Random(100);

    ViewBag.Title = number.Next().ToString();
    //}
}


<div @*style="position: relative;"*@>
    @if (Model != null)
    {
        for (int i = 0; i < Model.Controls.Count; i++)
        {
            @Html.DisplayFor(m => m.Controls[i])
        }
    }
</div>

@for (int i = 0; i < 5; i++)
{
    var random = new Random();
    var form = @random.Next();
    <form action="#/summaryview" method="POST" id="@form">
        <div id="id" data-try="@i">
            <input type="text" name="Reference" value="/@form" />

            <input type="text" name="Width" value="@random.Next()" />

            <input type="text" name="Height" value="@random.Next()" />

            <input type="text" name="DetailViewId" value="@random.Next()/" />



        </div>
    </form>
}

<script>
    $(document).ready(function (e) {
        $('div[data-try]').on('click', function () {
            $(this).closest('form').submit();
        });
    });
</script>
