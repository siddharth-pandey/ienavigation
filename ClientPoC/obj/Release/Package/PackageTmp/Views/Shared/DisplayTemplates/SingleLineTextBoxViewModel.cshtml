@using System.Diagnostics
@using System.Web.Configuration
@model ClientPoC.ViewModels.StandardControls.SingleLineTextBoxViewModel
@{
    Debug.WriteLine(Model);
}


@Html.TextBoxFor(m => m.TextValue,
    new
    {style = string.Format("background: transparent; border: none; position: absolute; color: {0}; font-size: {1}px; text-align: {2}; vertical-align: {3}; width: {4}px; height: {5}px; top: {6}px; left: {7}px; z-index: {8}",
    Model.TextColour, Model.SizeOfFont, Model.Alignment, "left", Model.Width, Model.Height, Model.Top, Model.Left, Model.ZIndex),
        disabled = "disabled"
    })
@Html.HiddenFor(m => m.Type)
@Html.HiddenFor(m => m.TextValue)
@Html.HiddenFor(m => m.TextColour)
@Html.HiddenFor(m => m.TextLength)
@Html.HiddenFor(m => m.PlaceholderText)
@Html.HiddenFor(m => m.FontWeightValue)
@Html.HiddenFor(m => m.SizeOfFont)
@Html.HiddenFor(m => m.Alignment)
@Html.HiddenFor(m => m.HAlignment)
@Html.HiddenFor(m => m.VAlignment)