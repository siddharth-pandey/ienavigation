@model ClientPoC.ViewModels.StandardControls.FixedContainerViewModel


@if (Model != null)
{
    <div data-container-name="@Model.ContainerName" style="position: absolute; left: @(Model.Left)px; top: @(Model.Top)px; display: inline-block; width: @(string.Format("{0}px;", Model.Width))height:@(string.Format("{0}px;", Model.Height))background-color:@(string.Format("{0};", Model.BackgroundColour))border-color:@(string.Format("{0};", Model.BorderColour)) ">
        @Html.HiddenFor(m => m.Type)
        <span>@Model.Title</span>

        @if (Model.Components != null && Model.Components.Count > 0)
        {
            for (int i = 0; i < Model.Components.Count; i++)
            {
                @Html.DisplayFor(x => x.Components[i])
            }
        }
    </div>
}