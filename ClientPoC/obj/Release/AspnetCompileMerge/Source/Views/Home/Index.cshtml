@model ClientPoC.ViewModels.DefaultControlsViewModel

@{
    if (Request.IsAjaxRequest())
    {
        Layout = null;
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<script>
    //GetPartial('/Account/LoginPartial', '#loginPartial');
</script>
<div style="position: relative;">
    @if (Model != null)
    {
        for (int i = 0; i < Model.Controls.Count; i++)
        {
            @*@Html.HiddenFor(x => x.Controls[i].Type)*@
            @Html.DisplayFor(m => m.Controls[i])
        }
    }
</div>


<script>
    $(document).ready(function () {
        var options = {
            url: "/Account/LoginPartial",
            type: "Get",
            dataType: "html",
            selector: "#loginPartial"
        };
        GetPartial(options);
    });
</script>
