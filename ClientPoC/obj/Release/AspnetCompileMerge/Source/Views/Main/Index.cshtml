@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    <script>


        $.ajax({
            url: 'Account/Login',
            type: 'GET',
            dataType: 'html',
            async: true,
            beforeSend: function() {
                $("#loaderMain").show();
            },
            complete: function() {
                $("#loaderMain").hide();
            },
        }).success(function(response, status, xhr) {
            var ct = xhr.getResponseHeader("content-type") || "";
            if (ct.indexOf('html') > -1) {
                // returned result is of type html, so act accordingly
                //History.pushState({ content: response }, "Login Page", "/Account/Login");

                History.pushState({ content: response, WasPushStateTriggered: true }, "Login Page", "/Account/Login");
                InjectContentToShell(response);
            } else if (ct.indexOf('json') > -1) {
                // returned result is of type json, so act accordingly
            }
        }).fail(function(e) {
            console.log(e);
        });

    </script>
}

